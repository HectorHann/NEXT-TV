<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pull_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:minWidth="300dp"
            android:padding="20dp"
            android:text="Pull Reminder"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="40dp" />


        <Button
            android:id="@+id/burndown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:minWidth="300dp"
            android:padding="20dp"
            android:text="Burndown Chart"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pull_reminder"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/grafana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:minWidth="300dp"
            android:padding="20dp"
            android:text="Grafana Chart"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/burndown"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/sonar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:minWidth="300dp"
            android:padding="20dp"
            android:text="Sonar Report"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grafana"
            tools:ignore="MissingConstraints" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/kibana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:minWidth="300dp"
            android:padding="20dp"
            android:text="Kibana Chart"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sonar"
            tools:ignore="MissingConstraints" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>