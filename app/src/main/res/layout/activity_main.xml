<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/pull_reminder"
        android:text="Pull Reminder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:padding="20dp"
        android:layout_margin="50dp"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="Button 2"
        android:id="@+id/burn_down"
        app:layout_constraintTop_toBottomOf="@+id/pull_reminder"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_margin="50dp"

        android:minWidth="300dp"      android:padding="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints" />

    <Button
        android:text="Button 3"
        app:layout_constraintTop_toBottomOf="@+id/burn_down"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="24dp"      android:padding="20dp"

        android:layout_margin="50dp"
        android:minWidth="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>